#! /bin/bash


# Get the markdown the article is generated from
# echo -e $(curl https://hub.mender.io/posts/284.json | jq '.raw') > article.md

# Build a test-script from the Mender-Hub article
python extract-code.py article.md test-script

# Make it executable
chmod +x test-script

# Run the test
if ./test-script; then
    echo "Success!"
else
    echo "Failure!"
    exit 1
fi

exit 0
